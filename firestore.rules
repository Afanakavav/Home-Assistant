rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Households: members can read, creators can write
    match /households/{householdId} {
      allow read: if request.auth != null && 
        request.auth.uid in resource.data.members;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        request.auth.uid in resource.data.members;
    }
    
    // Expenses: household members can read, creators can write
    match /expenses/{expenseId} {
      allow read: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/households/$(resource.data.householdId)).data.members;
      allow create: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/households/$(request.resource.data.householdId)).data.members;
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.createdBy;
    }
    
    // Shopping lists: household members can read/write
    match /shoppingLists/{listId} {
      // Allow read if user is member of the household
      allow read: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/households/$(resource.data.householdId)).data.members;
      
      // Allow create if user is member of the household (check request.resource for new documents)
      allow create: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/households/$(request.resource.data.householdId)).data.members;
      
      // Allow update/delete if user is member of the household
      allow update, delete: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/households/$(resource.data.householdId)).data.members;
    }
    
    // Tasks: household members can read/write
    match /tasks/{taskId} {
      // Allow read if user is member of the household
      allow read: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/households/$(resource.data.householdId)).data.members;
      
      // Allow create if user is member of the household (check request.resource for new documents)
      allow create: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/households/$(request.resource.data.householdId)).data.members;
      
      // Allow update/delete if user is member of the household
      allow update, delete: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/households/$(resource.data.householdId)).data.members;
    }
    
    // Inventory: household members can read/write
    match /inventory/{itemId} {
      allow read, create, update, delete: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/households/$(resource.data.householdId)).data.members;
    }
    
    // Recurring expenses: household members can read/write
    match /recurringExpenses/{expenseId} {
      // Allow read if user is member of the household
      allow read: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/households/$(resource.data.householdId)).data.members;
      
      // Allow create if user is member of the household (check request.resource for new documents)
      allow create: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/households/$(request.resource.data.householdId)).data.members;
      
      // Allow update/delete if user is member of the household
      allow update, delete: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/households/$(resource.data.householdId)).data.members;
    }
    
    // Plants: household members can read/write
    match /plants/{plantId} {
      allow read, create, update, delete: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/households/$(resource.data.householdId)).data.members;
    }
    
    // Vendors: household members can read/write
    match /vendors/{vendorId} {
      allow read, create, update, delete: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/households/$(resource.data.householdId)).data.members;
    }
  }
}

